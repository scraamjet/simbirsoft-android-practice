<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/authorizationFragment">

    <fragment
        android:id="@+id/authorizationFragment"
        android:name="com.example.auth.presentation.AuthorizationFragment"
        android:label="Авторизация">
        <action
            android:id="@+id/action_authorization_to_help"
            app:destination="@id/helpFragment"
            app:popUpTo="@id/authorizationFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.news.presentation.news.NewsFragment"
        android:label="Новости">
        <action
            android:id="@+id/action_news_to_news_detail"
            app:destination="@id/newsDetailFragment" />
        <action
            android:id="@+id/action_news_to_filter"
            app:destination="@id/filterFragment" />
    </fragment>

    <fragment
        android:id="@+id/newsDetailFragment"
        android:name="com.example.news.presentation.newsdetail.NewsDetailFragment"
        android:label="Детали">
        <action android:id="@+id/action_news_detail_to_news"
            app:destination="@+id/newsFragment"/>
        <argument
            android:name="newsId"
            app:argType="integer" />
        <deepLink
            app:uri="app://news_detail/{newsId}" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.profile.presentation.profile.ProfileFragment"
        android:label="Профиль">
        <action
            android:id="@+id/action_profile_to_edit_photo_dialog"
            app:destination="@id/editPhotoDialogFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchContainerFragment"
        android:name="com.example.search.presentation.search.SearchContainerFragment"
        android:label="Поиск" />

    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.filter.presentation.FilterFragment"
        android:label="Фильтры" />

    <fragment
        android:id="@+id/helpFragment"
        android:name="com.example.help.presentation.HelpFragment"
        android:label="Помощь" />

    <dialog
        android:id="@+id/editPhotoDialogFragment"
        android:name="com.example.profile.presentation.dialog.EditPhotoDialogFragment"
        android:label="Диалог" />

    <dialog
        android:id="@+id/action_news_detail_to_donate_dialog"
        android:name="com.example.news.presentation.dialog.HelpMoneyDialogFragment" >
        <argument
            android:name="newsId"
            app:argType="integer" />
        <argument
            android:name="newsTitle"
            app:argType="string" />
    </dialog>
</navigation>
