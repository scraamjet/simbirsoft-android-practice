<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_search_result_margin_top"
    android:layout_marginBottom="@dimen/item_search_result_margin_bottom"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_title"
        style="@style/TextStyle8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="@integer/item_search_result_layout_weight"
        android:ellipsize="end"
        android:maxLines="@integer/item_search_result_max_lines" />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_search_result_margin_end"
        android:importantForAccessibility="no"
        android:src="@drawable/icon_chevron_right" />

</LinearLayout>

