<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_bottom_profile_item_friend"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/friendImage"
        android:layout_width="@dimen/size_profile_image_friend"
        android:layout_height="@dimen/size_profile_image_friend"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/friendName"
        style="@style/BodyTextRegularBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/profile_friend_margin_start" />
</LinearLayout>
