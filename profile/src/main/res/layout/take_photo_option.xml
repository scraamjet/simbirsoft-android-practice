<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/edit_photo_dialog_take_photo_margin_top"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edit_photo_dialog_option_margin_start"
        android:src="@drawable/camera" />

    <TextView
        style="@style/HeadingMediumBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/edit_photo_dialog_option_margin_start"
        android:text="@string/edit_photo_dialog_take_picture" />
</LinearLayout>
